
@{
    ViewBag.Title = "AssignEmployee";
}
@model assignments.DB.request
<h3>Assign Employee</h3>

<form action="" method="post">
    <input class="form-control" type="text" name="r_name" placeholder="@Model.restaurant.r_name" readonly />
    <input type="hidden" name="req_id" value="@Model.req_id" />
    <select class="form-control" name="collected_by">
        <option value="" disabled selected>SELECT EMPLOYEE</option>

        @foreach (var employee in ViewBag.employees)
        {
            <option value="@employee.e_id">@employee.e_name</option>
        }

    </select>
    <br />
    <input type="submit" class="form-control" value="ASSIGN EMPLOYEE" />
</form>
