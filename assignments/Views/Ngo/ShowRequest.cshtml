
@{
    ViewBag.Title = "ShowRequest";
}

<h2>ShowRequest</h2>

@if (Model.Count != 0)
{

    <table class="table table-bordered">
        <tr>
            <th>Restaurant Name</th>
            <th>Preservation Time</th>
            <th>Status</th>
            <th>Employee Assigned</th>
        </tr>
        @foreach (var req in Model)
        {
            <tr>
                <td>@req.restaurant.r_name</td>
                <td>@req.preserve_time</td>
                <td>@req.status</td>@*
                <td>@req.collected_by</td>*@
                <td>
                    @if (req.collected_by == null)
                    {
                        <a href="/Ngo/AssignEmployee/@req.req_id">Assign</a>
                    }
                    else
                    {

                    @req.collected_by
                }
                    </td>
                </tr>
        }
    </table>


}